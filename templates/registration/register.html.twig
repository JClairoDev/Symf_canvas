{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="container register-background-color">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1>Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'form-group'}}) }}

        {{ form_row(registrationForm.name, {'attr':{'class': 'form-control width-form-box'}}) }}

        {{ form_row(registrationForm.lastname, {'attr':{'class': 'form-control width-form-box'}}) }}

        {{ form_row(registrationForm.avatar, {'attr': {'class': 'form-control'}}) }}

        {{ form_row(registrationForm.email, {'attr':{'class': 'form-control width-form-box'}}) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            'attr':{'class': 'form-control width-form-box'}
        }) }}


        <button type="submit" class="btn btn-primary margin-btn">S'enregistrer</button>

        {{ form_end(registrationForm) }}

    </section>

{% endblock %}
